mixin sCertificates(data)
	// start sCertificates
	+b.SECTION.sCertificates.section#sCertificates&attributes(attributes)
		.container
		
				
			+e.row.row
				.col-md
					+b.section-title
						h2 Все компетенции автора подтверждены документально
					a(data-fslightbox="certificate" href="img/@2x/certificat-1.jpg")
						+pic('certificat-1.jpg','')
				+e.rcol.col
					a(data-fslightbox="certificate" href="img/@2x/certificat-2.jpg")
