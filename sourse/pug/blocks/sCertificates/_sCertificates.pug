				.col-md-6
					a(data-fslightbox="certificate" href="img/@2x/certificat-4.jpg")
						+pic('certificat-4-sm.jpg','',0)
				.col-md-6
					a(data-fslightbox="certificate" href="img/@2x/certificat-5.jpg")
						+pic('certificat-5-sm.jpg','',0)
				.col-md-6
